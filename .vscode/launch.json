{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fortinetvmazure/bin/streamlit",
            "args": [
                "run",
                "${workspaceFolder}/azureappintegration/fortigate-azure-chatbot/src/app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/azureappintegration/fortigate-azure-chatbot/src"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/azureappintegration/fortigate-azure-chatbot/tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
